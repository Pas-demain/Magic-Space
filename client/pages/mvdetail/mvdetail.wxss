/* pages/mvdetail/mvdetail.wxss */
.mv-main{
  width: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}
.m-video{
  width: 100%;
}
.mv-main-one{
  padding:12px 18px 32px 18px;
  font-size: 14px;
  color: rgb(194, 193, 193);
  border-bottom: 10px solid rgba(255, 255, 255, 0.2)
}
.mv-name{
  display: inline-block;
  font-size: 18px;
  color: white;
  padding:12px 18px 0px 18px;
  line-height: 22px;
  letter-spacing:1px;
}
.mv-main-two{
  padding:12px 18px 12px 18px; 
  border-bottom: 2px solid rgba(255, 255, 255, 0.2)
}
.mv-main-two .mv-info-title{
  color: white;
  font-size: 16px;
}
.mv-main-two .mv-info{
  font-size: 14px;
  color: rgb(200, 200, 200);
  margin-top: 14px;
  display:inline-block;
}
.mv-com-title{
  font-size: 16px;
  color: rgba(243, 243, 243, 0.89);
  display: inline-block;
  padding:12px 18px 7px 18px; 
}
.mv-com{
  width: 100%;
  padding-left: 14px;
  padding-top: 5px;
  margin-top: 10px;
  display: inline-block;
  margin-left: 10px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 5px;
}
.mv-com .post{
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.mv-com .mv-info-main{
  width: 100%;
  height: 40px;
  line-height: 40px;
  position: relative;
}
.mv-in{
 width: 82%;
 padding-right: 26px;
 padding-bottom: 12px;
 border-bottom: 1px solid gainsboro;
}
.mv-info-main .post-name{
  font-size: 16px;
  padding-left: 10px;
  color: rgb(9, 179, 247);
}
.mv-info-main .zan{
  width: 20px;
  height: 20px;
  position: absolute;
  right: 20px;
  top: 8px;
}
.mv-info-main .zan-num{
  font-size: 16px;
  float: right;
  height: 40px;
  line-height: 40px;
  position: absolute;
  right:46px;
  color: white;
}
.mv-com-main{
  font-size: 14px;
  color:white;
  padding:0px 14px 0px 14px;
  display:inline-block;
}
.com-rep{
  font-size: 14px;
  color: rgb(228, 223, 223);
  margin:5px 14px 0px 14px;
  background: rgba(243, 243, 243, 0.3);
  padding-left:5px;
  line-height:20px;
  border-radius:5px
}
.com-rep .com-rep-name{
  color: rgb(9, 179, 247);
}
.load-button{
  background:rgba(253, 253, 253, 0); 
  font-family: 宋体;
  font-size: 14px;
  font-weight: 800;
  color: #FF9966;
}

