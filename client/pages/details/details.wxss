/* pages/details/details.wxss */
.lyric-main{
  padding: 20px;
}
.songname{
  font-size: 18px;
  color:white;
}
.artist{
  margin-top: 10px;
  margin-bottom: 10px;
  height: 20px;
  width: 100%;
  line-height: 20px;
  display: inline-block;
  font-size: 14px;
  color:white;
}
.cover{
  width: 100%;
  height: 200px;
  margin: 10px auto;
  border-radius: 10px;
}
.lyric{
  display: inline-block;
  width: 100%;
  font-size: 14px;
  color: white;
  text-align: center;
}
.com{
  font-size: 16px;
  color: white;
  display: inline-block;
  border-top: 1px solid white;
  width: 100%;
  height: 20px;
  padding: 16px;
}
.rela{
    display: flex;
    align-items: flex-end; /*底部对齐*/
    justify-content: space-between; /*两端对齐*/
    box-sizing: border-box;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 18rpx 0 18rpx 30rpx;
    background-color: rgb(231, 231, 231);
    font-size: 28rpx;
    z-index: 999;
}
.text{
    width: 604rpx;
    min-height: 34rpx;
    max-height: 102rpx; /*最多显示三行*/
    border-width: 15rpx 20rpx; /*使用padding与预期留白不一致，故使用border*/
    border-style: solid;
    border-color:  rgb(248, 248, 248);
    line-height: 34rpx;
    font-size: 28rpx;
    background-color: rgb(248, 248, 248);
    border-radius: 4rpx;
}
.submit{
  width: 116rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    color: #FF9966;
}